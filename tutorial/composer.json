{
    "name": "pos-apotek/tutorial",
    "description": "Tutorial Sistem POS Apotek dengan PHP PDO",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "mpdf/mpdf": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "generate-pdf": "php generate_pdf.php",
        "test": "phpunit tests/"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
